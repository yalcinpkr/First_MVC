@model IEnumerable<MyFirstMVC.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Kategoriler</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Yeni Kategori</a>
<table class="table table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem=>item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-success btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete",new {id=item.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz ?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>

</table>



