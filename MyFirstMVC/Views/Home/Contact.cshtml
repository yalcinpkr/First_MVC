@model MyFirstMVC.Models.ContactViewModel
    <div class="row my-2">

    </div>
    <div class="col-12">
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">

                <div class="row my-4">
                    <div class="col-md-6">
                        @using (Html.BeginForm())
                        {
                            if (!string.IsNullOrEmpty(ViewBag.Error))
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>
                            }
                            if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                                <div class="alert alert-success">@ViewBag.Message</div>
                            }

                            @Html.ValidationSummary(false)
                            <div class="alert alert-info"> İletişim Formu </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.FirstName, new { @class = "col-md-2 col-form-label" })
                                <div class="col" -md-10>
                                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Adınız" })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.LastName, new { @class = "col-md-2 col-form-label" })
                                <div class="col" -md-10>
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Soyadınız" })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Phone, new { @class = "col-md-2 col-form-label" })
                                <div class="col" -md-10>
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Telefonunuz" })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Email, new { @class = "col-md-2 col-form-label" })
                                <div class="col" -md-10>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Emailiniz" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">

                                @Html.LabelFor(model => model.Message, new { @class = "col-md-2 col-form-label" })
                                <div class="col" -md-10>
                                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Mesajınız" })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">

                                <div class="col-md-10 offset-md-2">
                                    @Html.CheckBoxFor(model => model.PrivacyPolicyAccepted)
                                    <label for="PrivacyPolicyAccepted">
                                        <a href="@Url.Action("TermsofUse","Home")" style="color:blue;" target="_blank">Kullanım Koşullarını Okudum ve Kabul Ediyorum</a>
                                    </label>
                                    @Html.ValidationMessageFor(model => model.PrivacyPolicyAccepted, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary my-4">Gönder</button>

                        }


                    </div>
                    <div class="col-md-6">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d316.1662301442803!2d28.998024188522365!3d41.07124310291763!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab6f814faae93%3A0xb4c4deeea963a380!2zTWVjaWRpeWVrw7Z5LCDDh8SxbmFybMSxIFNrLiwgMzQzODEgxZ5pxZ9saS_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1563435254540!5m2!1str!2str"  frameborder="0" style="border:0; width:100%; height:80%;" allowfullscreen></iframe>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
